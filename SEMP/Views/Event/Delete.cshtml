@model SEMP.Models.Event

<h2>Delete Event</h2>
<p>Are you sure you want to delete the event with the following details?</p>

<dl>
    <dt>Name:</dt>
    <dd>@Model.Name</dd>

    <dt>Date:</dt>
    <dd>@Model.Date.ToShortDateString()</dd>

    <dt>Location:</dt>
    <dd>@Model.Location</dd>
</dl>

<form id="deleteForm" asp-controller="Event" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="button" onclick="confirmDelete()">Delete</button>
</form>

<a asp-action="Index">Cancel</a>

<script>
    function confirmDelete() {
        var result = confirm("Are you sure you want to delete this event?");
        if (result) {
            // If the user confirms, submit the form for deletion
            document.getElementById("deleteForm").submit();
        }
    }
</script>
