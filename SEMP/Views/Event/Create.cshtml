<!-- Views/Event/Create.cshtml -->
@model Event

<style>
    form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="date"] {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        background-color: #4caf50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }
</style>

<h2>Create Event</h2>
<form asp-action="Create">
    <div>
        <label asp-for="Name">Event Name:</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Date">Event Date:</label>
        <input asp-for="Date" type="date" />
        <span asp-validation-for="Date"></span>
    </div>
    <div>
        <label asp-for="Location">Event Location:</label>
        <input asp-for="Location" />
        <span asp-validation-for="Location"></span>
    </div>
    <!-- Add other input fields as needed -->
    <div>
        <input type="submit" value="Create" />
    </div>
</form>
